    [[[11.277005891864533,63.38338420926681],
      [11.277005891864533,63.5263822705968],
      [10.818326692645783,63.5263822705968],
      [10.818326692645783,63.38338420926681]]]);
      
Map.addLayer(g1,
             {'color': 'black'},
             'Geometry [black]: polygon', false);
Map.centerObject(g1);

